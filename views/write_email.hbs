<script type="text/javascript" src="/plugins/happy.js"></script>
<script src="/bundle.js"></script>
<script type="text/javascript" src="/plugins/zepto.animate.js"></script>
<script type="text/javascript" src="/plugins/zepto-tooltip.js"></script>
